<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3f2fd"
    tools:context=".fragment.AlatFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_satu"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/abuBiru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Remote"
        android:elevation="5dp"
        app:popupTheme="@style/AppTheme.AppBarOverlay" />
    </android.support.design.widget.AppBarLayout>

  <Button
      android:id="@+id/tmbl_on"
      android:layout_centerVertical="true"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:textColor="#fff"
      android:textSize="30dp"
      android:visibility="gone"
      android:layout_centerHorizontal="true"
      android:background="@drawable/circle_button"
      android:text="ON"/>

    <Button
        android:id="@+id/tmbl_off"
        android:layout_centerVertical="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="30dp"
        android:visibility="gone"
        android:background="@drawable/circle_button_2"
        android:text="OFF"/>
    <TextView
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="RELAY KELISTRIKAN MOTOR"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="160dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="status"/>
    <TextView
        android:id="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:textColor="#3f51b5"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:text=""/>



</RelativeLayout>